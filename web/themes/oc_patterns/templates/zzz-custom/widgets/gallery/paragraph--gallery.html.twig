{% extends "paragraph.html.twig" %}

{% block widgetContent %}

{{ attach_library('oc_patterns/gallery') }}

{% embed "@organisms/01-widgets/gallery/gallery.twig"
  with{
    gallery_type: content.field_gallery_type['#object'].field_gallery_type.value
  }
%}

{% if gallery_type == 1 %}
  {% set gallery_type = "lightbox" %}
{% elseif gallery_type == 0 %}
  {% set gallery_type = "slider" %}
{% endif %}

{% block plgalleryopen %}{# patternlab specifc html #}{% endblock %}

{% block galleryContent %}

    {% if widget_title %}
      <h3 class="widget-title">{{widget_title}}</h3>
    {% endif %}

    <div class="gallery-type {{ gallery_type }}">

      {% if gallery_type == "lightbox" %}

        {{ attach_library('oc_patterns/lightbox') }}
        {% block lightBoxContent %}
          {%- for key, item in content.field_oc_image_multi if key|first != '#' -%}
            {%- if paragraph.field_oc_image_multi[key].target_id > 0 -%}
              <div class="featherlight-gal image-gal" href="#item{{paragraph.field_oc_image_multi[key].target_id}}" rel="gallery-{{paragraph.id.value}}">{{ drupal_entity('media', paragraph.field_oc_image_multi[key].target_id, 'large_thumb') }}
                <div class="featherlight-hidden" id="item{{paragraph.field_oc_image_multi[key].target_id}}">{{ drupal_entity('media', paragraph.field_oc_image_multi[key].target_id, 'large') }}</div>
              </div>
            {%- endif -%}
          {%- endfor -%}
        {% endblock %}

      {% elseif gallery_type == "slider" %}

        {% block sliderContent %}
          {{ attach_library('oc_patterns/slick') }}
          {{- content.field_widget_title -}}
          {{- content.field_oc_image_multi -}}
        {% endblock %}

      {% endif %}

    </div>


  {% endblock %}

    {% block plgalleryclose %}{# patternlab specifc html #}{% endblock %}

	{% endembed %}

{% endblock %}
