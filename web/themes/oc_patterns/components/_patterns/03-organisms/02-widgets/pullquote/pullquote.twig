{#
	DRUPAL: This template is embedded into the Drupal pullquote paragraph template.
#}

{{ quote_instructions }}
{% block plwidgetopen %}
	<div class="paragraph paragraph--type--pullquote">
{% endblock %}

	{% if widget_title %}
		<h3 class="widget-title">{{widget_title}}</h3>
	{% endif %}

	{% block quoteContent %}
		{% if quote %}
			<div class="field field-oc-long-text">
				{{ quote }}
			</div>
		{% endif %}
		{% if source %}
			<div class="field field-oc-short-text">
				{{ source }}
			</div>
		{% endif %}
	{% endblock %}
				
{% block plwidgetclose %}
	</div>
{% endblock %}