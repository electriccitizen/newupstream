{#
	DRUPAL: This template is embedded into the Drupal lightbox gallery paragraph template.
#}
{{lightbox_instructions}}

{% block plwidgetopen %}
	<div class="paragraph--type--lightbox-gallery">
{% endblock %}

		{% block widgetTitle %}
			{% if widget_title %}
				<h3 class="widget-title">{{widget_title}}</h3>
			{% endif %}
		{% endblock %}
		
		<div class="gallery-wrapper">
			{% block lightboxContent %}
				{% for image in images %}
					<div class="featherlight-gal image-gal" href="#item{{image.id}}">
						<img src="{{image.src}}" />
			
						<div class="featherlight-hidden" id="item{{image.id}}">
							<img src="{{image.src}}" />
						</div>
					</div>
				{% endfor %}
			{% endblock %}
		</div>

{% block plwidgetclose %}
	</div>
{% endblock %}