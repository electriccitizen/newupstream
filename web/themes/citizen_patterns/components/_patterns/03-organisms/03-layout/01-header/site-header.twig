{% import "@base/macros.twig" as styles %}

{% block headerOpen %}
{{ header_instructions }}
<div class="layout-container pl-spacer">
{% endblock %}

<header role="banner" class="nav-{{ styles.mainNavStyle }}">
  <div>

		{% include "@molecules/blocks/branding/_branding-block.twig" 
			with{
				logo: header_logo,
				sitename: header_sitename
			}
		%}
		 
		{% if header_search %}
			{% embed "@molecules/blocks/search/search-block.twig" %}
				{% block searchOpen %}{# remove help searcg toggle descriptor #}{% endblock %}
			{% endembed %}
		{% endif %}
		 
		{% include "@molecules/blocks/superfish/_superfish-block.twig" %}
		 
	</div>
</header>

{% block headerClose %}
</div>
{% endblock %}