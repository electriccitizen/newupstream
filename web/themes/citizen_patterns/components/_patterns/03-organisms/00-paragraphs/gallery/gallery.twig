{#
	DRUPAL: This template is embedded into the Drupal gallery paragraph template.
#}

{{ gallery_instructions }} 
{% block plwidgetopen %}
   <div class="paragraph--gallery">
{% endblock %}

{% block galleryContent %}

  {% if widget_title %}
     <div class="widget-title">{{widget_title}}</div>
  {% endif %}

  <div class="gallery-type {{gallery_type}}" >
    <div class="gallery-wrapper">

      {% if 'Lightbox' in gallery_type %}
        {% block lightboxContent %}
          {% for image in images %}
            <div class="featherlight-gal image-gal" href="#item{{image.id}}">
                <img src="{{image.src}}" />
                <div class="featherlight-hidden" id="item{{image.id}}">
                    <img src="{{image.src}}" />
                </div>
            </div>
          {% endfor %}
        {% endblock %}
      {% else %}
        {% block sliderContent %}
          {% for image in images %}
              <div class="slider-image"><img src="{{ image.src }}"></div>
          {% endfor %}
        {% endblock %}
      {% endif %}

    </div> {# end gallery-wrapper #}
  </div> {# end gallery-type #}

{% endblock %}

{% block plwidgetclose  %}
   </div>
{% endblock %}
