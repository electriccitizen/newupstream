{#
	 STYLEGUIDE ONLY
#}

{% block headerOpen %}
	<div class="layout-container">
{% endblock %}

<header role="banner">
  <div>
		{% include "@composites/01-blocks/01-branding/pl-branding.twig" 
			with{
				logo: branding.logo,
				path: branding.path,
				projectName: branding.projectName,
				classes: branding.classes
			}
		%}
		{% if search %}
			{% include "@composites/01-blocks/02-search/pl-search-block.twig" 
				with{
					classes: search.classes
				}
			%}
		{% endif %}
		{% if mainNav %}
			{% include "@chunks/01-navigation/01-superfish/superfish.twig" 
				with{
					menuLinks: mainNav.menuLinks
				}
			%}
		{% endif %}
	</div>
</header>

{% block headerClose %}
	</div>
{% endblock %}