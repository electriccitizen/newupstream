{#
	DRUPAL: This template is embedded into the Drupal gallery paragraph template.
#}

{% block plOpen %}
  <div class="paragraph--type--gallery {{ galleryType }}">
{% endblock %}

{% block galleryContent %}
  {% if widgetTitle %}
     <div class="widget-title">{{ widgetTitle }}</div>
  {% endif %}
  <div class="gallery-type {{ galleryType }}" >
    <div class="gallery-wrapper">
      {% if 'lightbox' in galleryType %}
        {% block lightboxContent %}
          {% for image in images %}
            <div class="gal-image featherlight-gal image-gal" href="#item{{ image.id }}">
              <img src="{{ image.lightSrc }}" />
              <div class="featherlight-hidden" id="item{{ image.id }}">
                  <img src="{{ image.lightSrc }}" />
                  {% if image.caption %}
                    <div class="field-caption">{{ image.caption }}</div>
                  {% endif %}
              </div>
            </div>
          {% endfor %}
        {% endblock %}
      {% else %}
        {% block sliderContent %}
          <div class="field-image-multi">
            {% for image in images %}
              <div class="gal-image slider-image">
                <img src="{{ image.sliderSrc }}">
                {% if image.caption %}
                  <div class="field-caption">{{ image.caption }}</div>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        {% endblock %}
      {% endif %}
    </div>
  </div>
{% endblock %}

{% block plClose  %}
  </div>
{% endblock %}
