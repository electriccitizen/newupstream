{#
	STYLEGUIDE ONLY
#}

{% embed '@composites/02-paragraphs/00-base/_paragraphs-field-item.twig' %}
  {% block paragraphItem %}
    {% embed '@composites/02-paragraphs/00-base/_paragraph.twig' 
      with{
        widgetTitle: '',
      }
    %}

    	{% block widgetContent %}
				{% embed '@composites/02-paragraphs/11-section/_section-items-field.twig' %}
					
					{% block sectionItems %}
						{% for paragraph in paragraphs %}

							{% embed '@composites/02-paragraphs/00-base/_paragraph.twig' 
					      with{
					        sectionTitle: '',
					        sectionIntro: '',
					        layout: '',
					        background: '',
					        type: paragraph.type,
					        widgetTitle: paragraph.widgetTitle
					      }
					    %}
						    {% block widgetContent %}

									{% if paragraph.type == 'accordion' %}

									{% elseif paragraph.type == 'gallery' %}

									{% elseif paragraph.type == 'horizontal-rule' %}

									{% elseif paragraph.type == 'image' %}
						    		{% include "@composites/02-paragraphs/06-image/_image.twig"
						    			with{
						    				size: paragraph.size,
						    				src: paragraph.src,
						    				caption: paragraph.caption,
						    				url: paragraph.url,
						    				aria: paragfraph.aria
						    			}
						    		%}
									{% elseif paragraph.type == 'links-files' %}

									{% elseif paragraph.type == 'quote' %}

									{% elseif paragraph.type == 'text' %}
										{% include '@composites/02-paragraphs/09-text/_text.twig'
											with{
												sectionTitle: '',
								        sectionIntro: '',
								        layout: '',
								        background: '',
												widgetTitle: paragraph.widgetTitle,
												text: paragraph.text
											}
										%}
									{% elseif paragraph.type == 'video' %}

									{% endif %}
									
								{% endblock %}
							{% endembed %}

						{% endfor %}
					{% endblock %}

				{% endembed %}
			{% endblock %}

		{% endembed %}
	{% endblock %}
{% endembed %}