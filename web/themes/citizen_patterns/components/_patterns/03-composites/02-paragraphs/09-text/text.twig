{% embed '@composites/02-paragraphs/00-base/_paragraphs-field-item.twig' %}
  {% block paragraphItem %}
    {% embed '@composites/02-paragraphs/00-base/_paragraph.twig' 
      with{
        sectionTitle: '',
        sectionIntro: '',
      }
    %}

    	{% block widgetContent %}
    		{% if text %}
    			{% autoescape false %}
    				<div class="field field-text text-long">
	    				{{ text }}
	    			</div>
    			{% endautoescape %}
    		{% endif %}
    	{% endblock %}

    {% endembed %}
  {% endblock %}
{% endembed %}